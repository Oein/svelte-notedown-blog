{
  "name": "svelte-blog",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "GT=\"$(date)\" vite dev",
    "build": "GT=\"$(date)\" vite build",
    "preview": "GT=\"$(date)\" vite preview",
    "prepare": "GT=\"$(date)\" svelte-kit sync || echo ''",
    "check": "GT=\"$(date)\" svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "GT=\"$(date)\" svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@types/lz4js": "^0.2.1",
    "@types/mathjax": "^0.0.40",
    "@types/node": "^24.3.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/adapter-vercel": "^5.10.2",
    "chalk": "^5.6.0",
    "dotenv": "^17.2.1",
    "es-hangul": "^2.3.5",
    "lz4js": "^0.2.0",
    "mathjax": "3",
    "notedown-parser": "1.0.18"
  }
}
